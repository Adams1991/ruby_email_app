<%= form_with scope: :sent_email, url: sent_emails_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :email_template %><br>
    <% options = options_from_collection_for_select(@email_templates, 'id', 'subject', 2) %>
    <%= form.select :email_template_id,  options %>
  </p>

  <p>
    <%= form.label :subject %><br>
    <%= form.text_field :subject , :value => @email_templates.find_by(subject:"Test Template").subject %>
  </p>

  <p>
    <%= form.label :message_preview %><br>
    <%= form.text_area :message_preview, :value => @email_templates.find_by(subject:"Test Template").body %>
  </p>

  <p>
    <%= form.submit 'Send Email' %>
  </p>
<% end %>
